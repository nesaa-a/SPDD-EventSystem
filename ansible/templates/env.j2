# SPDD Event System Environment Configuration
# Generated by Ansible

# Environment
ENVIRONMENT={{ environment | default('development') }}
LOG_LEVEL={{ log_level | default('DEBUG') }}

# Database Configuration
POSTGRES_HOST={{ postgres_host | default('postgres') }}
POSTGRES_PORT={{ postgres_port | default('5432') }}
POSTGRES_DB={{ postgres_db | default('eventsdb') }}
POSTGRES_USER={{ postgres_user | default('postgres') }}
POSTGRES_PASSWORD={{ postgres_password | default('postgres') }}

# MongoDB Configuration
MONGO_URI={{ mongo_uri | default('mongodb://mongodb:27017') }}
MONGO_DB={{ mongo_db | default('spdd_analytics') }}

# Redis Configuration
REDIS_URL={{ redis_url | default('redis://redis:6379') }}
REDIS_PASSWORD={{ redis_password | default('') }}

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS={{ kafka_bootstrap_servers | default('kafka:9092') }}
KAFKA_TOPIC_EVENTS={{ kafka_topic_events | default('events.created') }}
KAFKA_CONSUMER_GROUP={{ kafka_consumer_group | default('analytics-group') }}

# Elasticsearch Configuration
ELASTICSEARCH_HOST={{ elasticsearch_host | default('elasticsearch') }}
ELASTICSEARCH_PORT={{ elasticsearch_port | default('9200') }}

# Security
JWT_SECRET_KEY={{ jwt_secret_key | default('change-me-in-production') }}
JWT_ALGORITHM={{ jwt_algorithm | default('HS256') }}
JWT_EXPIRATION_HOURS={{ jwt_expiration_hours | default('24') }}

# Tracing Configuration
TRACING_ENABLED={{ tracing_enabled | default('true') }}
JAEGER_HOST={{ jaeger_host | default('jaeger') }}
JAEGER_PORT={{ jaeger_port | default('6831') }}
SERVICE_NAME={{ service_name | default('event-service') }}

# Vault Configuration
VAULT_ADDR={{ vault_addr | default('http://vault:8200') }}
VAULT_ROLE={{ vault_role | default('spdd-app') }}

# Application Settings
APP_NAME=SPDD-EventSystem
API_VERSION=v1
CORS_ORIGINS={{ cors_origins | default('*') }}

# SSL Configuration
SSL_ENABLED={{ ssl_enabled | default('false') }}
SSL_CERT_PATH={{ ssl_cert_path | default('/etc/ssl/certs/spdd.crt') }}
SSL_KEY_PATH={{ ssl_key_path | default('/etc/ssl/private/spdd.key') }}

# Rate Limiting
RATE_LIMIT_REQUESTS={{ rate_limit_requests | default('100') }}
RATE_LIMIT_WINDOW={{ rate_limit_window | default('60') }}
